# Dockerfile for SP500 MCP Server V2 (Azure-Compatible)
# Use Python 3.11 slim image
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PORT=8001

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files (V2 version)
COPY sp500_mcp_server_v2.py .
COPY sp500_style_portfolio_60.csv .

# Expose port
EXPOSE 8001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8001/health || exit 1

# Run the V2 server
CMD ["python", "sp500_mcp_server_v2.py", "--transport", "streamable-http", "--port", "8001", "--host", "0.0.0.0"]

